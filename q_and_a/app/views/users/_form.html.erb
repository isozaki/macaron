<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <td>氏名(カナ)</td>
      <td><%= f.text_field(:name_kana) %></td>
    </tr>
    <tr>
      <td>ログインID</td>
      <td><%= f.text_field(:login) %></td>
    </tr>
    <tr>
      <td>パスワード</td>
      <td><%= f.password_field(:password) %></td>
    </tr>
    <tr>
      <td>パスワード(確認)</td>
      <td><%= f.password_field(:password_confirmation) %></td>
    </tr>
    <tr>
      <td>管理者権限</td>
      <td>
        <%= f.radio_button(:admin, User::ADMIN[:none]) %>
        <%= admin_name(User::ADMIN[:none]) %>
        <%= f.radio_button(:admin, User::ADMIN[:admin]) %>
        <%= admin_name(User::ADMIN[:admin]) %>
      </td>
    </tr>
  </tbody>
</table>
