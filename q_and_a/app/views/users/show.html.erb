<%= render 'layouts/alerts', notice: notice, alert: alert %>

<div id="user_show">
  <h2>利用者詳細</h2>
  <div class="edit-btn"><%= link_to('編集', edit_user_url(@user), class: 'btn') %></div>
  <div class="user_area">
    <table>
      <tbody>
        <tr>
          <td class="title">氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class="title">氏名(カナ)</td>
          <td><%= @user.name_kana %></td>
        </tr>
        <tr>
          <td class="title">ログインID</td>
          <td><%= @user.login %></td>
        </tr>
        <tr>
          <td class="title">管理者権限</td>
          <td><%= admin_name(@user.admin) %></td>
        <tr>
      </tbody>
    </table>
  </div>
<%= link_to('戻る', users_path)%>
