<!DOCTYPE html>
<html>
<head>
  <title>QAndA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="title">
    <h1>質問管理表アプリ</h1>
  </div>
  <div id="logout-btn">
    <% if session[:user_id] %>
      <% if check_login %>
        利用者：<%= logined_user.name %>
      <% end %>
      <%= link_to('ログアウト', session_path, method: 'delete', class: 'btn') %>
    <% end %>
  </div>
  <%= yield %>
</body>
</html>
