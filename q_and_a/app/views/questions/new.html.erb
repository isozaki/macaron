<%= render 'layouts/alerts', notice: notice, alert: alert %>

<div id="new-question">
  <h2>質問新規登録</h2>
  <div id="form_area">
    <%= form_for(@question, url: questions_path, method: :post) do |f| %>
      <%= render('form', f: f) %>
      <div class="action">
        <%= hidden_field_tag(:matter_id, params[:matter_id])%>
        <%= link_to('戻る', controller: 'questions', action: 'index', matter_id: params[:matter_id]) %>
        <%= submit_tag('登録', class: 'btn', data: { confirm: "入力した内容を登録します。\nよろしいですか？" }) %>
      </div>
    <% end %>
  </div>
</div>
