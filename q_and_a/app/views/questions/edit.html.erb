<h2>質問更新</h2>
<div id="form_area">
  <%= form_for(@question, url: question_path(@question), method: :patch) do |f| %>
    <%= render('form', f: f) %>
    <div class="action">
      <%= link_to('戻る', question_path(@question)) %>
      <%= submit_tag('更新', data: { confirm: "入力した内容を更新します。\nよろしいですか？" }) %>
    </div>
  <% end %>
</div>
